<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sergio.goodpicture" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GoodPicture</name>
    <description>
        Um aplicativo de fotos para postagem em redes sociais e aplicacao de filtros.
    </description>
    <author email="sergio.marinho94@gmail.com" href="http://cordova.io">
        Sergio Marinho
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
</widget>
